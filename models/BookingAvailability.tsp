import "./OpeningHours.tsp";

const BOOKING_AVAILABILITY_ID_DOC = "The availability id that was used in the request.";
const BOOKING_AVAILABILITY_LOCAL_DATE_TIME_START_DOC = "The `localDateTimeStart` value from the original availability object.";
const BOOKING_AVAILABILITY_LOCAL_DATE_TIME_END_DOC = "The `localDateTimeEnd` value from the original availability object.";
const BOOKING_AVAILABILITY_ALLDAY_DOC = "A boolean value indicating whether the availability is all day.";
const BOOKING_AVAILABILITY_OPENING_HOURS_DOC = "The opening hours from the original availability object.";

const BOOKING_AVAILABILITY_ID_EXAMPLE = "2021-10-27T00:00:00-04:00";
const BOOKING_AVAILABILITY_LOCAL_DATE_TIME_START_EXAMPLE = "2021-10-27T00:00:00-04:00";
const BOOKING_AVAILABILITY_LOCAL_DATE_TIME_END_EXAMPLE = "2021-10-28T00:00:00-04:00";
const BOOKING_AVAILABILITY_ALLDAY_EXAMPLE = false;
const BOOKING_AVAILABILITY_OPENING_HOURS_EXAMPLE = #[OPENING_HOURS_EXAMPLE];

const BOOKING_AVAILABILITY_EXAMPLE = #{
  id: BOOKING_AVAILABILITY_ID_EXAMPLE,
  localDateTimeStart: BOOKING_AVAILABILITY_LOCAL_DATE_TIME_START_EXAMPLE,
  localDateTimeEnd: BOOKING_AVAILABILITY_LOCAL_DATE_TIME_END_EXAMPLE,
  allDay: BOOKING_AVAILABILITY_ALLDAY_EXAMPLE,
  openingHours: BOOKING_AVAILABILITY_OPENING_HOURS_EXAMPLE,
};

@example(BOOKING_AVAILABILITY_EXAMPLE)
model BookingAvailability {
  @doc(BOOKING_AVAILABILITY_ID_DOC)
  @example(BOOKING_AVAILABILITY_ID_EXAMPLE)
  id: string;

  @doc(BOOKING_AVAILABILITY_LOCAL_DATE_TIME_START_DOC)
  @example(BOOKING_AVAILABILITY_LOCAL_DATE_TIME_START_EXAMPLE)
  localDateTimeStart: string;

  @doc(BOOKING_AVAILABILITY_LOCAL_DATE_TIME_END_DOC)
  @example(BOOKING_AVAILABILITY_LOCAL_DATE_TIME_END_EXAMPLE)
  localDateTimeEnd: string;

  @doc(BOOKING_AVAILABILITY_ALLDAY_DOC)
  @example(BOOKING_AVAILABILITY_ALLDAY_EXAMPLE)
  allDay: boolean;

  @doc(BOOKING_AVAILABILITY_OPENING_HOURS_DOC)
  @example(BOOKING_AVAILABILITY_OPENING_HOURS_EXAMPLE)
  openingHours: OpeningHours[];
}
